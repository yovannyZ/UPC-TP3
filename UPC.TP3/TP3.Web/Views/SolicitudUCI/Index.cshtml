@model IEnumerable<TP3.Entidades.EF.T_SOLICITUD_UCI>

@{
    ViewBag.Title = "Index";
}


<div>
    <h2 style="text-align:center" class="text-success">Evaluación del ingreso de pacientes a UCI</h2>
</div>

<br />
<br />

<table class="table">
    <tr>
        <th>
           Solicitud
        </th>
        <th>
            Paciente
        </th>
        <th>
            DNI
        </th>
        <th>
           Fecha Solicitud
        </th>
        <th>
          Grado complejidad
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.numeroSolicitud)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.T_PACIENTE.T_PERSONA.nompersona)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.T_PACIENTE.dniPaciente)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.fechaSolicitud)
        </td>


        <td>
            @Html.DisplayFor(modelItem => item.gravedadPaciente)
        </td>

        <td>
            @Html.ActionLink("Evaluar", "Evaluar", new { id=  item.idSolicitud})
        </td>
    </tr>
}

</table>
